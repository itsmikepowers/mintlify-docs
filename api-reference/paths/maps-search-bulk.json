{
    "post": {
      "description": "Search Google Maps based on certain lat and long coordinates for multiple locations.",
      "security": [
        {
          "apiKeyAuth": []
        }
      ],
      "requestBody": {
        "description": "Search query parameters for multiple locations",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "query": {
                    "type": "string",
                    "description": "Search query"
                  },
                  "limit": {
                    "type": "integer",
                    "description": "Maximum number of results"
                  },
                  "country": {
                    "type": "string",
                    "description": "Country code"
                  },
                  "lang": {
                    "type": "string",
                    "description": "Language code"
                  },
                  "lat": {
                    "type": "number",
                    "format": "float",
                    "description": "Latitude"
                  },
                  "lng": {
                    "type": "number",
                    "format": "float",
                    "description": "Longitude"
                  },
                  "offset": {
                    "type": "integer",
                    "description": "Offset for pagination"
                  },
                  "zoom": {
                    "type": "integer",
                    "description": "Zoom level"
                  },
                  "flatten": {
                    "type": "boolean",
                    "description": "Flatten results"
                  }
                },
                "required": [
                  "query",
                  "lat",
                  "lng"
                ]
              }
            }
          }
        },
        "required": true
      },
      "responses": {
        "200": {
          "description": "Search results",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "results": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "additionalProperties": true
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Unexpected error",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../schemas/error.json"
              }
            }
          }
        }
      }
    }
  }
  